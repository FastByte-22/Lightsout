<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jimdo.hanhan.lightsout.LoseScreen"
    android:background="#7ca3b1"
    android:id="@+id/layout"
    style="@style/Base.Theme.AppCompat.Light.DarkActionBar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOU LOST! :("
        android:id="@+id/tVWin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:enabled="true"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#c0392b"
        android:fontFamily="sans-serif"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btnHome"
        android:layout_marginTop="162dp"
        android:layout_below="@+id/tVWin"
        android:background="#b34646"
        android:clickable="true"
        android:minWidth="150dp"
        android:minHeight="50dp"
        style="@android:style/Widget.Holo.Light.Button"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:textColorHighlight="@color/accent_material_light"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
        android:textAppearance="@android:style/Holo.SegmentedButton"
        android:layout_alignRight="@+id/tVWin"
        android:layout_alignEnd="@+id/tVWin"
        android:layout_alignLeft="@+id/tVWin"
        android:layout_alignStart="@+id/tVWin" />

    <Button
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:id="@+id/btnTryAgain"
        android:layout_marginTop="47dp"
        android:background="#b34646"
        android:clickable="true"
        android:minWidth="150dp"
        android:minHeight="50dp"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:textColorHighlight="@color/accent_material_light"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
        android:textAppearance="@android:style/Holo.SegmentedButton"
        android:layout_below="@+id/btnHome"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
